<p id="notice"><%= notice %></p>

<h1>Commentaires</h1>

<table>
  <thead>
    <tr>
      <th>Pseudo</th>
      <th> | </th>
      <th>Commentaire</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user %></td>
        <td><%= comment.string %></td>
        <td><%= comment.title %></td>
        <td><%= comment.body %></td>
        <td><%= link_to 'Montrer', comment %></td>
        <td><%= link_to 'Modifier', edit_comment_path(comment) %></td>
        <td><%= link_to 'Supprimer', comment, method: :delete, data: { confirm: 'Etes-vous sur de vouloir supprimer ce commentaire ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouveau commentaire', new_comment_path %>
