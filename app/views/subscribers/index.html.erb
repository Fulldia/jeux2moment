<%if cookies[:saved_subscriber] %>
    Merci de vous être enregistrer!
<% else %>
  <h1>Abonnez-vous à la newsletter ici!</h1>
  <%= form_for @subscriber do |f| %>
    <%= f.text_field :name, placeholder: "Nom" %>
    <%= f.email_field :email, placeholder: "Email" %>
    <%= f.submit %>
    <% end %>
<% end %>
